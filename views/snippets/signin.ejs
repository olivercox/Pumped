<form action="/login" method="post" class="form-signin">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h2 id="signinLabel" class="form-signin-heading">Please sign in</h2>
  </div>
  <div class="modal-body">
    <input name="email" type="text" class="input-block-level" placeholder="Email address" 
    data-validation-required-message="Must be a valid email address" 
    pattern='^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$' required>
    <label class="checkbox">
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary" type="submit">Sign in</button>
  </div>
  </form>