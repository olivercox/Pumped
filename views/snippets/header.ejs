    <div class="container">
      <a class="brand" href="/"><img style="height: 50px; width: 171px;" src="/img/logo_trans.png"/></a>
      <div class="navbar-content">
        <ul class="nav ">
          <li class="active">
            <a href="/">Home</a> 
          </li>
          <li>
            <a href="/stats">Stats</a> 
          </li>
          <li>
            <a href="/about">About</a> 
          </li>
