<% layout('./layouts/default') %>
<div class="container">
  <div class="row">
  <div class="span6">
      <div class="well">
        <div style="max-width: 500px; margin: 0 auto;">
          <form action="/login" method="post" class="form-signin">
            <div class="modal-header">
              <h2 id="signinLabel" class="form-signin-heading">Sign In</h2>
            </div>
            <div class="modal-body">
              <p>Enter your details below to sign in to an existing account</p>
              <input name="email" type="text" class="input-block-level" placeholder="Email address"
              data-validation-required-message="Must be a valid email address" pattern="^(([^&lt;&gt;()[\]\\.,;:\s@\&quot;]+(\.[^&lt;&gt;()[\]\\.,;:\s@\&quot;]+)*)|(\&quot;.+\&quot;))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$"
              required="">
              <label class="checkbox">
                <input type="checkbox" value="remember-me"> Remember me</label>
            </div>
            <div class="modal-footer">
              <button class="btn btn-primary" type="submit">Sign in</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="span6">
      <div class="well">
        <div style="max-width: 500px; margin: 0 auto;">
          <form action="/register" method="post" class="form-register">
            <div class="modal-header">
              <h2 id="registerLabel" class="form-register-heading">Create an Account</h2>
            </div>
            <div class="modal-body">
              <p>Enter your details below and we'll create your account and send you a
                welcome email.</p>
              <input name="username" type="text" class="input-block-level"
              placeholder="Name" pattern="^[A-Za-z0-9]+(?:[ _-][A-Za-z0-9]+)*$" data-validation-pattern-message="You must enter a name"
              required="">
              <p class="help-block">Must start with a letter or number, can contain only letters, numbers,
                space, underscore and hyphen.</p>
              <em class="text-warning">The name you wish to be known by, it can be a nickname.</em>
              <input name="email" type="text" class="input-block-level" placeholder="Email address"
              data-validation-required-message="Must be a valid email address" pattern="^(([^&lt;&gt;()[\]\\.,;:\s@\&quot;]+(\.[^&lt;&gt;()[\]\\.,;:\s@\&quot;]+)*)|(\&quot;.+\&quot;))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$"
              required="">
              <em class="text-warning">So we can open your account and keep you updated. We'll never share this with anyone else!</em> 
            </div>
            <div class="modal-footer">
              <button class="btn btn-primary" type="submit">Register</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>